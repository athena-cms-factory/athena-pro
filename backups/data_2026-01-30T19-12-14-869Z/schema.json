{
  "blueprint_name": "athena-cms-factory-promo",
  "description": "Landingspagina voor de Athena CMS Factory.",
  "features": { "ecommerce": false },
  "data_structure": [
    {
      "table_name": "site_settings",
      "columns": ["site_name", "tagline", "logo_text", "footer_text", "site_logo_image"]
    },
    {
      "table_name": "contact",
      "columns": ["titel", "email", "telefoon", "locatie", "btw_nummer", "linkedin_url"]
    },
    { "table_name": "hero", "columns": ["title", "subtitle", "cta_text", "image"] }
  ],
  "sections": [
    {
      "id": "site_settings",
      "title": "Site Instellingen",
      "fields": {
        "site_name": "string",
        "tagline": "string",
        "logo_text": "string",
        "footer_text": "string",
        "site_logo_image": "image" 
      }
    },
    {
      "id": "contact",
      "title": "Contact Gegevens",
      "fields": {
        "titel": "string",
        "email": "string",
        "telefoon": "string",
        "locatie": "string",
        "btw_nummer": "string",
        "linkedin_url": "string"
      }
    },
    { "id": "hero", "title": "Hoofdpagina", "fields": { "title": "string", "subtitle": "text", "cta_text": "string", "image": "image" } },
    { "id": "intro", "title": "Intro", "fields": { "title": "string", "content": "text", "subcontent": "text", "image": "image" } },
    { "id": "voordelen", "title": "Voordelen", "fields": { "items": [{ "title": "string", "description": "text", "icon": "string" }] } },
    { "id": "innovatie", "title": "Innovatie", "fields": { "categories": [{ "name": "string", "skills": "text" }] } },
    { "id": "showcase", "title": "Showcase", "fields": { "items": [{ "name": "string", "category": "string", "description": "text", "link": "string", "image": "image" }] } },
    { "id": "proces", "title": "Proces", "fields": { "items": [{ "stap": "string", "titel": "string", "tijdsduur": "string", "uitleg": "text" }] } }
  ]
}
